{
  "name": "@royalty-loans/subgraph",
  "version": "0.0.1",
  "private": true,
  "nx": {
    "targets": {
      "codegen": {
        "executor": "nx:run-commands",
        "options": {
          "command": "graph codegen",
          "args": [
            "node-env=production"
          ]
        }
      },
      "build": {
        "executor": "nx:run-commands",
        "options": {
          "command": "graph build",
          "args": [
            "node-env=production"
          ]
        }
      },
      "deploy": {
        "executor": "nx:run-commands",
        "options": {
          "command": "graph deploy --node https://api.studio.thegraph.com/deploy/ royalty-loans",
          "args": [
            "node-env=production"
          ]
        }
      },
      "test": {
        "executor": "nx:run-commands",
        "options": {
          "command": "graph test",
          "args": [
            "node-env=production"
          ]
        }
      }
    }
  }
}
