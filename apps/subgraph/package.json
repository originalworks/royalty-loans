{
  "name": "@royalty-loans/subgraph",
  "version": "0.0.1",
  "private": true,
  "nx": {
    "targets": {
      "codegen": {
        "executor": "nx:run-commands",
        "options": {
          "command": "graph codegen",
          "cwd": "apps/subgraph"
        }
      },
      "build": {
        "executor": "nx:run-commands",
        "options": {
          "command": "graph build --network base-sepolia",
          "cwd": "apps/subgraph"
        }
      },
      "deploy": {
        "executor": "nx:run-commands",
        "options": {
          "command": "graph deploy --node https://api.studio.thegraph.com/deploy/ royalty-loans",
          "cwd": "apps/subgraph"
        }
      },
      "test": {
        "executor": "nx:run-commands",
        "options": {
          "command": "NODE_PATH=../../node_modules graph test",
          "cwd": "apps/subgraph"
        }
      }
    }
  }
}
