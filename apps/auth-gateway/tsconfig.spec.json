{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "./out-tsc/jest",
    "types": [
      "jest",
      "node"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "tests",
    "jest.config.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.d.ts",
    "tests/**/*.spec.ts",
    "tests/**/*.test.ts",
  ],
  "references": [
    {
      "path": "./tsconfig.app.json"
    }
  ]
}